<%- include("partials/header") %>

<div class="mt-5 pt-3">
     <div class="row">
        <h1 style="text-align: center;">
            Register New Staff
        </h1>

        <div style="width: 30%; margin: 30px auto; ">
            <!-- display errors -->
            <form action="/api/auth/register" method="POST">
                <div class="form-group">
                    <label class="form-label" for="name"> Name </label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="name" 
                    placeholder="name" 
                    value="<%= typeof name != 'undefined' ? name: ''%>"
                    >
                </div>
                <div class="form-group">
                    <label class="form-label" for="email">Email</label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="email" 
                    placeholder="email" 
                    value="<%= typeof email != 'undefined' ? email: ''%>"
                    >
                </div>
                <div class="form-group">
                    <label class="form-label" for="role">role</label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="role" 
                    placeholder="role" 
                    value="<%= typeof role != 'undefined' ? role: ''%>"
                    >
                </div>
                <div class="form-group">
                    <label class="form-label" for="userName">username</label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="username" 
                    placeholder="username" 
                    value="<%= typeof username != 'undefined' ? username: ''%>"
                    >
                </div>
                <div class="form-group">
                    <label class="form-label" for="password">Password</label>
                    <input 
                    class="form-control" 
                    type="password" 
                    name="password" 
                    placeholder="password" 
                    value="<%= typeof password != 'undefined' ? password: ''%>"
                    >
                </div>
               
                <hr>
                <h5>Other Information</h5>
                <div class="form-group">
                    <label class="form-label" for="age">Age</label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="age" 
                    placeholder="age"
                    value="<%= typeof age != 'undefined' ? age: ''%>"
                >
                </div>
                <div class="form-group">
                    <label class="form-label" for="address">Address</label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="address" 
                    placeholder="address" 
                    value="<%= typeof address != 'undefined' ? address: ''%>"
                    >
                </div>
                <div class="form-group">
                    <label class="form-label" for="number">Phone Nmber</label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="number" 
                    placeholder="phone number"
                    value="<%= typeof number != 'undefined' ? number: ''%>"
                     >
                </div>
                <div class="form-group">
                    <label class="form-label" for="specialty">Specialty</label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="specialty" 
                    placeholder="specialty" 
                    value="<%= typeof specialty != 'undefined' ? specialty: ''%>"
                    >
                </div>
                <div class="form-group">
                    <label class="form-label" for="gender">Gender</label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="gender" 
                    placeholder="gender" 
                    value="<%= typeof gender != 'undefined' ? gender: ''%>"
                    >
                </div>
                <br>
               <div class="form-group" >
                    <button class="btn btn-lg btn-danger btn-block">Submit</button>
               </div>
                </form>
                <a href="/">Back</a>
        </div>
     </div>
</div>

<%- include("partials/footer") %>   