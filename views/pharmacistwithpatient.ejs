<%- include("partials/header") %>
<!-- offcanvas -->

<!-- offcanvas -->

<div class="mt-5 pt-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 fw-bold fs-3">DashBoard</div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-primary h-100">
                    <div class="card-header">
                        <span><i class="bi bi-clipboard2-heart"></i></span>
                        Doctors Note</div>
                    <div class="card-body">
                      <h5 class="card-title">Doctors Note</h5>
                      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                  </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-secondary h-100">
                    <div class="card-header">
                        <span><i class="bi bi-table"></i></span>
                        Prescription</div>
                    <div class="card-body">
                      <h5 class="card-title"><%=order.name%></h5>
                      <p class="card-text">
                          <%=order.dosage_type%>
                        </p>
                    </div>
                  </div>
            </div>
            <a class="btn btn-sm btn primary" href="/pharmacy/showpatients">back</a>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Charts
                    </div>
                    <div class="card-body">
                        <canvas id="lineChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Analytics
                    </div>
                    <div class="card-body">
                        <canvas id="barChart"></canvas>
                    </div>
                </div>
            </div>
        </div>  
    </div>

    <div class="container-fluid">
        <div class="header mt-3">
            <h2 class="patient"><%=patient.name%></h2> 
         </div>
        <table>
            <tr>
                <th>Photo</th>
                <td><img src="data:image/<%=patient.photo%>"></td>
            </tr>
            <tr>
                <th>Name</th>
                <td><%=patient.name%></td>
            </tr>
            <tr>
                <th>Age</th>
                <td><%=patient.age%></td>
            </tr>
            <tr>
                <th>Number</th>
                <td><%=patient.number%></td>
            </tr>
            <tr>
                <th>ID</th>
                <td><%=patient.id%></td>
            </tr>
            <tr>
                <th>BloodGroup</th>
                <td><%=patient.bloodgroup%></td>
            </tr>
            <tr>
                <th>Genotype</th>
                <td><%=patient.genotype%></td>
            </tr>
            <tr>
                <th>Underlying Illness</th>
                <td><%=patient.underlyingillness%></td>
            </tr>
            <tr>
                <th>Patient Vitals</th>
                <td>pulse: </td>
            </tr>
        </table>
          
    </div>
    
    <div class="container-fluid">
        <div class="header mt-3">
            <h2 class="patient">New Patient</h2> 
         </div>
        
        <form class="d-flex ms-auto mt-3">
            <div class="input-group my-3 my-lg-0 ">
                <input type="text" class="form-control" placeholder="Search patient id/matric number" aria-label="search patient id" aria-describedby="button-addon2">
                <button class="btn btn-primary" type="button" id="button-addon2"><i class="bi bi-search-heart"></i></button>
             </div>
        </form>
        <br>
    </div>
</div>

