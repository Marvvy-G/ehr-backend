<%- include("partials/header") %>
<div class="mt-5 pt-3">
    <h1 style="text-align: center;">
        Patient Vitals of <%= patient.name %>
    </h1>
    
     <div class="row">

        <div style="width: 30%; margin: 30px auto; ">
            <form action="/visit/<%= patient._id %>" method="POST">
                <div class="form-group"> 
                    <input class="form-control" type="text" name="temperature" placeholder="temperature" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="bloodpressure" placeholder="bloodpressure" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pulse" placeholder="pulse" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="oxygensat" placeholder="oxygensat" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="heartrate" placeholder="heartrate" >
                </div>
               <div class="form-group" >
                    <button class="btn btn-lg btn-danger btn-block">Submit</button>
               </div>
                </form>
                <a href="/nurse/showpatients">Back</a>
        </div>
     </div>
</div>

<%- include("partials/footer") %>   